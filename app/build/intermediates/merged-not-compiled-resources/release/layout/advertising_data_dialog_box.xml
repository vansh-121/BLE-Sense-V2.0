<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advertisement Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/advertiseNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Device Name"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/advertiseIntervalEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Interval (ms)"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/connectable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connectable"
        android:checked="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/startAdvertiseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/stopAdvertiseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>