<LinearLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/advertising">




    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_arrow" />

    <!-- Title for the Activity -->
    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:text="Advertising Data"

        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Device Info -->

    <!-- Advertising Data Details -->

    <TextView
        android:id="@+id/deviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/roundedbackground"
        android:elevation="2dp"
        android:padding="12dp"
        android:text="Device: N/A"
        android:textColor="#333333"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/advertisingDataDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advertising Data Details: N/A"
        android:textSize="16sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:background="@drawable/roundedbackground"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />



    <Button
        android:id="@+id/downloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Download Data"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/bulbImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bulb_off"
        android:visibility="gone" />



    <!-- Temperature Meter -->
    <com.example.blegame.TemperatureViewMeter
        android:id="@+id/temperatureMeter"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />

    <ProgressBar
        android:id="@+id/scanningIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        />

